# XMAS scan
alert tcp any any -> $HOME_NET any (
    msg:"XMAS scan";
    flags:FPU;
    sid:1000001;
    rev:1;
    classtype:attempted-recon;
)

# FIN only
alert tcp any any -> $HOME_NET any (
    msg:"FIN scan";
    flags:F;
    sid:1000002;
    rev:1;
    classtype:attempted-recon;
)

# UDP flood
alert udp any any -> $HOME_NET any (
    msg:"UDP flood";
    sid:1000003;
    rev:1;
    classtype:attempted-dos;
    detection_filter: track by_src, count 1000, seconds 1;
)

# Reverse Shell block before connection established
alert tcp any any -> any 8080 (
    msg:"Reverse Shell outbound SYN";
    flags:S;
    sid:1000004;
    rev:1;
    classtype:attempted-admin;
)
